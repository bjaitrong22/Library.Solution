@{
  Layout = "_Layout";
}

@model Library.Models.Book

<div class="container">
  <h4>Add a new book</h4>
  <hr />
  <br>

  <p>@Html.ValidationMessageFor(model => model.CatalogId,"", new { @class = "text-danger", @style = "font-weight: 600;"})</p>
  <p>@Html.ValidationMessageFor(model => model.Title,"", new{@class = "text-danger", @style = "font-weight: 600;"})</p>

  @using (Html.BeginForm())
  {
    @Html.LabelFor(model => model.Title, "Title: ")
    @Html.TextBoxFor(model => model.Title)

    @Html.LabelFor(model => model.Catalog, "Library Catalog: ")
    @Html.DropDownList("CatalogId")

    <input type="submit" value="Add new Book" class="btn btn-primary"/>
  }
  <br>
  <p>@Html.ActionLink("Manage Books", "Index")</p>
</div>