@model IEnumerable<IdentityRole>
@{
  ViewData["Title"] = "ROLES";
}

<h1 class="bg-info text-white">All Roles</h1>
<a asp-action="Create">Create a Role</a>

<table>
  <tr><th>ID</th><th>Name</th><th>Users</th><th>Update</th><th>Delete</th>
  @foreach (var role in Model)
  {
    <tr>
      <td>@role.Id</td>
      <td>@role.Name</td>
      <td i-role="@role.Id"></td>
      <td><a asp-action="Update" asp-route-id="@role.Id">Update</a></td>
<td>
      <form asp-action="Delete" asp-route-id="@role.Id" method="post">
        <button type="submit">
          Delete
        </button>
      </form>
      </td>
    </tr>

  }
  </table>