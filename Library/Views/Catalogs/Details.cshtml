@{
  Layout ="_Layout";
}

@model Library.Models.Catalog;
@using Library.Models;
@using System.Collections.Generic;

<div class="container">
  <h2>Library Catalog Details</h2>
  <hr />
  <br>
  <h3>@Html.DisplayFor(model => model.LibraryName)</h3>

  @if(@Model.Books.Count == 0)
  {
    <p>This library catalog does not contain any books</p>
  }
  else
  {
    <h4>@Model.LibraryName's catalog list of books:</h4>
    <ul>
      @foreach(Book book in Model.Books)
      {
        <li>@book.Title</li>
      }
    </ul>
  }
  <br>
  <p>@Html.ActionLink("Manage Library Catalogs", "Index")</p>
  <p>@Html.ActionLink("Edit Library Catalog", "Edit", new { id = Model.CatalogId})</p>
  <p>@Html.ActionLink("Delete Library Catalog", "Delete", new { id = Model.CatalogId})</p>
  <p>@Html.ActionLink("Add New Book", "Create", "Books")</p>
</div>