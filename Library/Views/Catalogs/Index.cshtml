@{
    Layout = "_Layout";
}

@using Library.Models;

<div class="container">
  <h1>Library Catalogs</h1>

  @if (@Model.Count == 0)
  {
    <h3>No library catalogs have been added yet!</h3>
  }
  else
  {
    <ul>
      @foreach(Catalog catalog in Model)
      {
        <li>@Html.ActionLink($"{catalog.LibraryName}'s catalog", "Details", new { id = catalog.CatalogId})</li>
      }
    </ul>
  }
  <br>
  <p>@Html.ActionLink("Add New Library Catalog", "Create")</p>
  <p>@Html.ActionLink("Add New Book", "Create", "Books")</p>
  <p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>